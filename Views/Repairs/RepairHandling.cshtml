    </tr>

    @foreach (var item in Model)
    {
        ViewBag.workcellId = Session["workcellId"];
        if ((item.RepairState == "新增" || item.RepairState == "未修复") && item.WorkcellID == ViewBag.workcellId)
        {
            <tr>
                @*<td>
                        @Html.DisplayFor(modelItem => item.CheckID)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.ItemID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.FamilyID)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.FamilyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.PartNo)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Problem)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pic)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AddDate)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.AddUserID)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.AddUserName)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.RepairDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RepairUserName)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.RepairState)
                </td>
                <td>
                    @Html.ActionLink("维修成功", "RepairSuccess", new { id = item.RepairID }) |
                    @Html.ActionLink("维修失败", "RepairFail", new { id = item.RepairID })
                    @*@Html.ActionLink("Delete", "Delete", new { id = item.RepairID })*@
