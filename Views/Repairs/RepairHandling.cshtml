@model IEnumerable<Fixture02.Models.repair>

@{
    ViewBag.Title = "RepairHandling";
    Layout = "~/Views/Shared/FixtureMaster.cshtml";
}

<h2>报修处理</h2>

<table class="table">
    <tr>
        @*<th>
                @Html.DisplayNameFor(model => model.CheckID)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.ItemID)
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Code)*@夹具代码
        </th>
