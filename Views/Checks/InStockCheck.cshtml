        var thisobj = $(obj);

        var itemid = thisobj.attr("itemid1");
        var code = thisobj.attr("code");
        var seqid = thisobj.attr("seqid");
        var name = thisobj.attr("name");
        var model = thisobj.attr("model");
        var partno = thisobj.attr("partno");
