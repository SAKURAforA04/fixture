        $("#PartNo").val(partno);
        $("#WorkcellID").val(workcellid);
        $("#FamilyID").val(workcellid);
        $("#FamilyName").val(familyname);

        $("#ItemID1").val(itemid);
        $("#Code1").val(code);
        $("#SeqID1").val(seqid);
        $("#Name1").val(name);
        $("#Model1").val(model);
        $("#PartNo1").val(partno);
        $("#WorkcellID1").val(workcellid);
        $("#FamilyID1").val(workcellid);
        $("#FamilyName1").val(familyname);
