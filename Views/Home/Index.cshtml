@model Fixture02.Controllers.modelPage
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/FixtureMaster.cshtml";
}
<style>
    .badge {
        background-color: orangered;
    }
</style>
<div style="height:auto;">
    <div class="jumbotron col-lg-pull-12" style="text-align:center;height:80px;">
        <div style="position:relative;top:-50px;">
            <h1>欢迎进入工夹具智能管理系统</h1>
        </div>
    </div>
</div>

<div class="row clearfix">
    <div class="col-md-6 column">
        <div class="carousel slide" id="carousel-132541">
            <ol class="carousel-indicators">
                <li class="active" data-slide-to="0" data-target="#carousel-132541">
                </li>
                <li data-slide-to="1" data-target="#carousel-132541">
                </li>
                <li data-slide-to="2" data-target="#carousel-132541">
                </li>
            </ol>
            <div class="carousel-inner">
                <div class="item active">
                    <img alt="" src="~/Content/1 (1).jpg" />
                    <div class="carousel-caption">
                        <h4>
                            First Thumbnail label
                        </h4>
                        <p>
                            Cras justo odio, dapibus ac facilisis in, egestas eget quam. Donec id elit non mi porta gravida at eget metus. Nullam id dolor id nibh ultricies vehicula ut id elit.
                        </p>
                    </div>
                </div>
                <div class="item">

                    <img src="~/Content/1 (1).png" />
                    <div class="carousel-caption">
                        <h4>
                            Second Thumbnail label
                        </h4>
                        <p>
                            Cras justo odio, dapibus ac facilisis in, egestas eget quam. Donec id elit non mi porta gravida at eget metus. Nullam id dolor id nibh ultricies vehicula ut id elit.
                        </p>
                    </div>
                </div>
                <div class="item">
                    <img src="~/Content/1 (2).png" />
                    <div class="carousel-caption">
                        <h4>
                            Third Thumbnail label
                        </h4>
                        <p>
                            Cras justo odio, dapibus ac facilisis in, egestas eget quam. Donec id elit non mi porta gravida at eget metus. Nullam id dolor id nibh ultricies vehicula ut id elit.
                        </p>
                    </div>
                </div>
            </div> <a class="left carousel-control" href="#carousel-132541" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a> <a class="right carousel-control" href="#carousel-132541" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>
        </div>
    </div>


    <div class="tabbable col-md-5" id="tabs-403238" style="position:center">
        <div class="panel panel-primary">
            <div class="panel-heading" style="background-color:cadetblue;">
                <h3 class="panel-title">未读消息</h3>
            </div>
            <div class="panel-body">
                <ul class="nav nav-tabs">
                    <li class="active">
                        <a href="#panel-789173" data-toggle="tab">采购入库<span class="badge">@Model.listJig.Count() </span></a>
                    </li>
                    <li>
                        <a href="#panel-891346" data-toggle="tab">报修处理 <span class="badge"> @Model.listRep.Count()</span></a>
                    </li>
                    <li>
                        <a href="#panel-891347" data-toggle="tab">报废处理<span class="badge">@Model.listScr.Count()</span></a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="panel-789173">

                        <div class="list-group">
                            @*<a href="#" class="list-group-item active">审核信息</a>*@
                            <div class="list-group-item">
                                审核信息
                            </div>



                            @foreach (var item in Model.listJig)
                            {
                                if (item.State == "新增")
                                {
                                    <div class="list-group-item">
                                        <h4 class="list-group-item-heading">
                                            您有一条对于 工夹具 @Html.DisplayFor(modelItem => item.Code) 的采购入库初审申请信息
                                        </h4>
                                        <p class="list-group-item-text">
                                            @Html.ActionLink("前往处理", "FirstReview", "Jigitems")
                                        </p>
                                    </div>
                                }
                                else if (item.State == "初审")
                                {
                                    <div class="list-group-item">
                                        <h4 class="list-group-item-heading">
                                            您有一条对于 工夹具 @Html.DisplayFor(modelItem => item.Code) 的采购入库复审申请信息
                                        </h4>
                                        <p class="list-group-item-text">
                                            @Html.ActionLink("前往处理", "SecondReview", "Jigitems")
                                        </p>
                                    </div>
                                }
                                else if (item.State == "退回")
                                {
                                    <div class="list-group-item">
                                        <h4 class="list-group-item-heading">
                                            您有一条对于 工夹具 @Html.DisplayFor(modelItem => item.Code) 的采购入库申请退回信息
                                        </h4>
                                        <p class="list-group-item-text">
                                            @Html.ActionLink("前往处理", "Index", "Jigitems")
                                        </p>
                                    </div>
                                }

                            }

                            <div class="list-group-item">
                            </div> <a class="list-group-item active" style="background-color:cadetblue;">@*<span class="badge">(@Model.listJig.Count() + @Model.listRep.Count()+ @Model.listScr.Count())</span><b>信息总数</b>*@ </a>
                        </div>

                    </div>
                    <div class="tab-pane" id="panel-891346">
                        <div class="list-group">
                            @** <a href="#" class="list-group-item active">审核信息</a>*@
                            <div class="list-group-item">
                                审核信息
                            </div>






                            @foreach (var item in Model.listRep)
                            {

                                <div class="list-group-item">
                                    <h4 class="list-group-item-heading">
                                        您有一条对于 工夹具 @Html.DisplayFor(modelItem => item.Code) 的报修审核信息
                                    </h4>
                                    <p class="list-group-item-text">
                                        @Html.ActionLink("前往处理", "RepairHandling", "repairs")
                                    </p>
                                </div>
                            }

                            <div class="list-group-item">
                            </div> <a class="list-group-item active" style="background-color:cadetblue;">@*<span class="badge">(@Model.listJig.Count() + @Model.listRep.Count() + @Model.listScr.Count())</span><b>信息总数</b>*@ </a>
                        </div>
                    </div>

                    <div class="tab-pane" id="panel-891347">

                        <div class="list-group">
                            @*<a href="#" class="list-group-item active">审核信息</a>*@
                            <div class="list-group-item">
                                审核信息
                            </div>

                            @foreach (var item in Model.listScr)
                            {
                                if (item.ScrapState == "新增")
                                {
                                    <div class="list-group-item">
                                        <h4 class="list-group-item-heading">
                                            您有一条对于 工夹具 @Html.DisplayFor(modelItem => item.Code) 的报废初审申请信息
                                        </h4>
                                        <p class="list-group-item-text">
                                            @Html.ActionLink("前往处理", "FirstScrap", "Scraps")
                                        </p>
                                    </div>
                                }
                                else if (item.ScrapState == "初审")
                                {
                                    <div class="list-group-item">
                                        <h4 class="list-group-item-heading">
                                            您有一条对于 工夹具 @Html.DisplayFor(modelItem => item.Code) 的报废复审申请信息
                                        </h4>
                                        <p class="list-group-item-text">
                                            @Html.ActionLink("前往处理", "SecondScrap", "Scraps")
                                        </p>
                                    </div>
                                }
                                else if (item.ScrapState == "退回")
                                {
                                    <div class="list-group-item">
                                        <h4 class="list-group-item-heading">
                                            您有一条对于 工夹具 @Html.DisplayFor(modelItem => item.Code) 的报废申请退回信息
                                        </h4>
                                        <p class="list-group-item-text">
                                            @Html.ActionLink("前往处理", "Index", "Scraps")
                                        </p>
                                    </div>
                                }

                            }


                            <div class="list-group-item">
                            </div> <a class="list-group-item active" style="background-color:cadetblue;">@* <span class="badge">(@Model.listJig.Count() + @Model.listRep.Count() + @Model.listScr.Count())</span><b>信息总数</b>*@</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
