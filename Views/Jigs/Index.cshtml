@model IEnumerable<Fixture02.Models.Jig>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/FixtureMaster.cshtml";
}
<h4><span class="glyphicon  glyphicon-record " style=" position:relative ;height  :20px;top :3px;" /> 当前位置: @Html.ActionLink("首页", "Index", "Home", new { }, new { style = "color:blue;" })>><a class="panel-title collapsed" style=" color :blue ;font-size :18px;" data-toggle="collapse" data-parent="#panel-756431" href="#panel-element-21445" id="cgrk">系统管理</a>>>工夹具定义管理</h4>

<button class="btn btn-warning" style="float:right"> @Html.ActionLink("创建新夹具", "Create", new { @class = "btn" }, new { style = "color:white;" }) </button>
<br />
<br />


<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">工夹具列表</h3>
    </div>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-bordered" style="text-align:center;">
                <tr>
                    <th>夹具名称</th>
                    <th>所属大类名称</th>
                    <th>夹具模组</th>
                    <th>夹具料号</th>
                    <th>工作部门名称</th>
                    <th>数量</th>
                    <th>责任人姓名</th>
                    <th style="text-align:center;">创建日期</th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    ViewBag.workcellId = Session["workcellId"];
                    if (item.WorkcellID == ViewBag.workcellId)
                    {

                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FamilyName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Model)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PartNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.WorkcellName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UPL)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OwnerName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AddDate)
                        </td>

                        <td>
                            <button class="btn btn-default btn-sm">@Html.ActionLink("编辑", "Edit", new { id = item.Code })</button> |
                            <button class="btn btn-default btn-sm">@Html.ActionLink("详情", "Details", new { id = item.Code })</button> |
                            <button class="btn btn-danger btn-sm">@Html.ActionLink("删除", "Delete", new { id = item.Code }, new { style = "color:white;" })</button>
                        </td>
                    </tr>
                    }
                }

            </table>
        </div>
    </div>
</div>